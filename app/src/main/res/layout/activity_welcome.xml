<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1A2B4A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Logo Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5B9A5F"
                android:padding="20dp">

                <ImageView
                    android:layout_width="151dp"
                    android:layout_height="150dp"
                    android:contentDescription="Acre Intelligence Logo"
                    android:src="@drawable/newlogo" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Title (outside card) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acre Intelligence"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In every pixel a prophecy, in every scan a shield"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="60dp"
            android:paddingHorizontal="40dp" />

        <!-- Sign In with Google Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signInGoogleBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign in with Google"
            android:textSize="19sp"
            android:textAllCaps="false"
            android:textColor="#E002620C"
            android:textStyle="bold"
            android:background="@drawable/light_button_background"
            android:backgroundTint="@null"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_google_green"
            android:drawablePadding="-13dp"
            android:paddingLeft="32dp"
            android:gravity="center" />

        <!-- Continue with Number Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueWithNumberBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Continue with Phone Number"
            android:textSize="19sp"
            android:textAllCaps="false"
            android:textColor="#E002620C"
            android:textStyle="bold"
            android:background="@drawable/light_button_background"
            android:backgroundTint="@null" />

        <!-- Footer note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ± Start your farming journey"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</ScrollView>