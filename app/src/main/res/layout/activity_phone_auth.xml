<?xml version="1.0" encoding="utf-8"?>
<!-- Save as res/layout/activity_phone_auth.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/welcome_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_revert"
            android:layout_gravity="start"
            android:layout_marginBottom="32dp"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Phone Number"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll send you a verification code"
            android:textSize="16sp"
            android:textColor="#C8E6C9"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Phone Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginBottom="32dp"
            android:textColorHint="#C8E6C9"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:padding="16dp"
                android:background="@drawable/input_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Continue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:background="@drawable/button_background"
            android:elevation="4dp" />

        <!-- Privacy note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By continuing, you agree to our Terms &amp; Privacy Policy"
            android:textSize="12sp"
            android:textColor="#A5D6A7"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="32dp" />

    </LinearLayout>

</ScrollView>