<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E27"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1F3A"
            android:padding="32dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜€ï¸ Space Weather"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Real-time solar conditions affecting agriculture"
                android:textSize="14sp"
                android:textColor="#B0B8D4"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/refreshBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸ”„ Refresh Data"
                android:textSize="14sp"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFFFFF"
                android:layout_gravity="center" />
        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Kp Index Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E2442">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ Geomagnetic Activity"
                        android:textSize="16sp"
                        android:textColor="#B0B8D4"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kp Index"
                                android:textSize="14sp"
                                android:textColor="#7B83A6"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/kpIndexValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:textSize="48sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/kpStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fetching data..."
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#5B9A5F" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scale"
                                android:textSize="12sp"
                                android:textColor="#7B83A6"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 - 9"
                                android:textSize="16sp"
                                android:textColor="#B0B8D4" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2D3350"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡ Impact on Agriculture"
                        android:textSize="14sp"
                        android:textColor="#B0B8D4"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/geomagneticStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking conditions..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#5B9A5F"
                        android:layout_marginBottom="12dp" />

                    <!-- Crop Impact -->
                    <TextView
                        android:id="@+id/cropImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyzing crop impact..."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#7B83A6"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Solar Wind Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E2442">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¨ Solar Wind Speed"
                        android:textSize="16sp"
                        android:textColor="#B0B8D4"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/solarWindValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/solarWindStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fetching data..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#5B9A5F"
                        android:layout_marginBottom="16dp" />

                    <!-- Satellite Impact -->
                    <TextView
                        android:id="@+id/satelliteImpact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyzing satellite impact..."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#7B83A6"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High-speed solar wind can disrupt satellite communications and increase cosmic radiation reaching Earth's surface."
                        android:textSize="13sp"
                        android:textColor="#7B83A6"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- F10.7 Solar Flux Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E2442">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Solar Radio Flux"
                        android:textSize="16sp"
                        android:textColor="#B0B8D4"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/f107Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/f107Status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fetching data..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#5B9A5F"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The F10.7 index measures solar activity. Higher values indicate increased UV radiation affecting plant growth and atmospheric conditions."
                        android:textSize="13sp"
                        android:textColor="#7B83A6"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Radiation Impact Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#2D1B4E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜¢ï¸ Radiation Impact"
                        android:textSize="16sp"
                        android:textColor="#D1C4E9"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/radiationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analyzing conditions..."
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#5B9A5F"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solar radiation influences photosynthesis rates, crop stress levels, and overall plant health."
                        android:textSize="13sp"
                        android:textColor="#B39DDB"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AI Crop Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#1E2442">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ¤– AI Crop Summary"
                        android:textSize="16sp"
                        android:textColor="#B0B8D4"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/aiSummary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generating AI summary..."
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡ Data from NOAA Space Weather Prediction Center\nUpdated every minute"
                android:textSize="12sp"
                android:textColor="#7B83A6"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
